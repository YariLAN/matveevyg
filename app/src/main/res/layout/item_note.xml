<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="35dp" android:id="@+id/title_note" android:textSize="18sp" android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            style="@style/Widget.AppCompat.TextView.SpinnerItem" android:fontFamily="@font/roboto_mono"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/text_note" android:layout_weight="2"
            style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textSize="16sp"/>
</LinearLayout>